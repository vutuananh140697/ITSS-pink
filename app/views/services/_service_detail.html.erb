<div class="hotellist-item hotel-detail">
    <div class="hotel-head">
        <div class="row hotel-name">
            <div class="col-xs-12 col-sm-9">
                <h3>
                    <a href="#">
                        <%= service.name %>
                    </a>
                </h3>
                <p class="text-blue">
                    <span class="fas fa-user-tie text-yellow"></span> Provider: <%= service.provider.name %>
                </p>
            </div>
        </div>
        <!-- .hotel-name -->
        <div class="hotel-slider">
            <div class="row gallery-photos clearfix">
                <div class="col-xs-12 col-sm-8 hotel-slider">
                    <div class="row">
                        <div class="col-sm-12" id="carousel-hotel-box">
                            <div class="carousel slide" id="hotelCarousel">
                                <!-- Carousel items -->
                                <div class="carousel-inner">
                                    <% @service.service_images.each_with_index do |img, i| %>
                                        <div class="item <%= (i == 0)? 'active': '' %>" data-slide-number="<%= i %>">
                                          <%= image_tag(img.link, class: "resize-slide", alt: "Service") %>
                                        </div>
                                    <% end %>
                                </div>
                                <!-- Carousel nav -->
                                <a class="left carousel-control" href="#hotelCarousel" role="button" data-slide="prev">
                                    <span class="fa fa-angle-left"></span>
                                </a>
                                <a class="right carousel-control" href="#hotelCarousel" role="button" data-slide="next">
                                    <span class="fa fa-angle-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="hotel-slider-thumbs" class="col-xs-12 col-sm-4">
                    <ul class="col-xs-12 no-padding hide-bullets">
                         <% @service.service_images.each_with_index do |img, i| %>
                            <li class="col-sm-3 <%= (i == 0)? 'active': '' %>" data-item-number="<%= i %>">
                              <%=link_to image_tag(img.link,class: "resize-slide-item", alt: "Service"), "#", class: "thumbnail", id: "carousel-hotel-#{i}"  %>
                            </li>
                        <% end %>
                    </ul>
                    <div class="col-xs-12 no-padding hotellist-price">
                        <h5 class="text-left text-blue"><strong>Start time:</strong> 
                            <% if service.start_time %>
                                <%= service.start_time.strftime("%B %d, %Y") %>
                            <% end %>
                        </h5>
                        <h5 class="text-left text-blue"><strong>End time:</strong> 
                            <% if service.end_time %>
                                <%= service.end_time.strftime("%B %d, %Y") %>
                            <% end %>
                        </h5>
                        <h2 class="text-left text-blue price-ht">USD <span class="text-yellow"><%= service.price %></span></h2>
                        <a href="#" class="btn btn-yellow btn-select-room"><%= t "Book_now" %></a>
                    </div>
                    <div class="col-xs-12 no-padding hotel-slide-pay">
                        <p class="text-blue"><%= t "cards_accepted" %></p>
                        <ul class="list-inline">
                            <li><%= link_to image_tag("pay1.png", class: "img-responsive"), "#" %></li>
                            <li><%= link_to image_tag("pay2.png", class: "img-responsive"), "#" %></li>
                            <li><%= link_to image_tag("pay3.png", class: "img-responsive"), "#" %></li>
                            <li><%= link_to image_tag("pay4.png", class: "img-responsive"), "#" %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- .hotel-slider -->
    </div>
    <!-- .hotel-head -->
</div>
<div class="hotellist-item hotel-detail">
    <strong><h2><%= t "DESCRIPTION" %></h2></strong>
    <%= service.description %>
</div>

<div class="hotellist-item hotel-detail">
    <strong><h2><%= t "REVIEWS" %></h2></strong>
</div>